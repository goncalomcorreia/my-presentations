\defbeamertemplate*{title page}{customized}[1][]
{
    {\centering\usebeamerfont{title}\color{tPeony}\inserttitle\par}
    \bigskip
    {\centering\usebeamerfont{subtitle}\insertsubtitle\par}
    \medskip
    {\centering\usebeamerfont{author}\insertauthor\par}
}

\defbeamertemplate*{frametitle}{customized}[1]{
\nointerlineskip
\parbox{\linewidth}{\centering \strut\insertframetitle%
\ifx\insertframesubtitle\empty
%nothing
\else
\\ \strut\usebeamerfont{framesubtitle}\insertframesubtitle%
\fi
}%
}

%white frame
\newcommand{\whiteframe}[1]{{%
\setbeamercolor{background canvas}{bg=white}
\setbeamercolor{normal text}{fg=mygr}
\setbeamercolor{frametitle}{fg=mybg}
\usebeamercolor[fg]{frametitle}
\usebeamercolor[fg]{normal text}
\begin{frame}
#1
\end{frame}
}}

% simple attention-grabbing separator slide (interruption)
\newcommand{\sepframe}[2][box]{%
{
\setbeamercolor{normal text}{fg=mybg,bg=#1}
  \begin{frame}[noframenumbering,plain]
    \begin{tikzpicture}[remember picture,overlay]
        \node[font={\fontspec{Open Sans Bold}\Huge\color{mybg}\selectfont},
        %\node[font={\usebeamerfont{title}\color{mybg}},
            text width=10cm,
            text badly centered] at (current page.center)
        {\expandafter{#2}};
    \end{tikzpicture}
  \end{frame}
}}
